        <script>
          const menu = document.querySelector('.burger-menu');
          let isOpen = false;
  
          menu.addEventListener('click', ()=>{
            if (isOpen) {
              menu.classList.remove('active');
              isOpen = false;
            } else {
              menu.classList.add('active');
              isOpen = true;
            }
          })
          
        </script>
      </div>
      
      
